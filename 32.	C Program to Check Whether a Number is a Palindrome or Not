#include <stdio.h>
int main() {
    int num,originalNum,reversed=0,remainder;
    printf("Enter an integer:");
    scanf("%d",&num);
    originalNum=num;
    while(num!=0){
        remainder=num%10;
        reversed=reversed*10+remainder;
        num/=10;
    }
    if(originalNum==reversed){
        printf("Number is a Palindrome number.%d\n", originalNum);
    }
    else
        printf("Number is not a Palindrome number.%d\n", originalNum);
    return 0;
}
