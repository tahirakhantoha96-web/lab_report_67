#include<stdio.h>
#include<stdlib.h>
struct Student{
    char name[50];
    int age;
    float marks;
};
int main(){
    struct Student s;
    FILE *fptr;
    printf("Enter name:");
    scanf(" %[^\n]",s.name);
    printf("Enter age:");
    scanf("%d",&s.age);
    printf("Enter marks:");
    scanf("%f",&s.marks);
    fptr=fopen("student.dat","wb");
    if(fptr==NULL){
        printf("Error opening file!\n");
        return 1;
    }
    fwrite(&s, sizeof(struct Student), 1, fptr);
    fclose(fptr);
    fptr=fopen("student.dat","rb");
    if(fptr==NULL){
        printf("Error opening file!\n");
        return 1;
    }
    fread(&s, sizeof(struct Student),1,fptr);
    fclose(fptr);
    printf("\nData read from file:\n");
    printf("Name: %s\nAge: %d\nMarks: %.2f\n", s.name, s.age, s.marks);
    return 0;
}
